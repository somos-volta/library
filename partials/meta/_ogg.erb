<!-- You can use Open Graph tags to customize link previews.
Learn more: https://developers.facebook.com/docs/sharing/webmasters -->

<meta property="og:url"          content="<%= permalink %>" />
<meta property="og:type"         content="article" />
<meta property="og:title"        content="<%= current_page_title %>" />
<meta property="og:description"  content="<%= current_page_description %>" />
<meta property="og:image"        content="<%= current_page_image %>" />
<meta property="og:site_name"    content="<%= site_name %>" />

<meta name="twitter:title"       content="<%= current_page_title %>">
<meta name="twitter:description" content="<%= current_page_description %>">
<meta name="twitter:image"       content="<%= current_page_image %>">
<meta name="twitter:site"        content="@USERNAME">
<meta name="twitter:creator"     content="@USERNAME">
