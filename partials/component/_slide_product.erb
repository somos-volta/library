<div class="slide-item item-nnnn file-<%= item.image.base_name %>">
	<div class="slide-info on-middle">

		<div class="stack space-between align-items-center">
			<div class="width-30">
				<h3 class="type-display2"><%= item.title %></h3>
				<p class="type-subhead text-secondary"><%= item.description %></p>
				<a class="button" href="<%= item.url %>"><%= data.text.main_gallery.button %></a>
			</div>
			<div class="promo width-30 text-right">
				<%= partial  "partials/component/product_info" %>
			</div>
		</div>

	</div>
	<img src="<%= item.image.original %>"" alt="<%= item.image.file_name %>" />
</div>
